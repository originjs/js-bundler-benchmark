{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
